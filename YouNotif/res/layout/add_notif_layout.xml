<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.61"
    android:columnCount="2"
    android:orientation="vertical"
    android:rowCount="27" >

    <TextView
        android:id="@+id/textView10"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:text="@string/action_group2"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="@string/action_NotifContent"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtContent"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="5"
        android:text="@string/action_BeginDate"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtBeginDate"
        android:layout_width="151dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="5"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:text="@string/action_BeginTime"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtBeginHour"
        android:layout_width="151dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="6"
        android:ems="10"
        android:inputType="time" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="7"
        android:text="@string/action_NotifDay"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spDay"
        android:layout_width="142dp"
        android:layout_height="34dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="7"
        android:entries="@array/days" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="8"
        android:text="@string/action_EndDate"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtEndDate"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="8"
        android:ems="10"
        android:inputType="date" />

    <Spinner
        android:id="@+id/spType"
        android:layout_width="171dp"
        android:layout_height="34dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="3" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="26"
        android:text="@string/action_new" />

    <EditText
        android:id="@+id/txtEndHour"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="9"
        android:ems="10"
        android:inputType="time" >

    </EditText>

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="9"
        android:text="@string/action_EndTime"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="3"
        android:text="@string/action_NotifType"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spGroup"
        android:layout_width="162dp"
        android:layout_height="34dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="1" />

    <TextView
        android:id="@+id/textView0"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="@string/action_Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtTitle"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="2"
        android:ems="10"
        android:inputType="textMultiLine" />

</GridLayout>