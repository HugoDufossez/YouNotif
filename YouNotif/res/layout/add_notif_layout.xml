<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/action_NotifType"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spType"
            android:layout_width="187dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.61"
        android:columnCount="2"
        android:rowCount="26" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="@string/action_NotifContent"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:ems="10"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|center_vertical"
            android:layout_row="8"
            android:text="@string/action_BeginDate"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/txtBeginDate"
            android:layout_width="151dp"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="8"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="19"
            android:text="@string/action_BeginTime"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/txtBeginHour"
            android:layout_width="151dp"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="19"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="168dp"
            android:layout_height="42dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="20"
            android:text="@string/action_NotifDay"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spDay"
            android:layout_width="142dp"
            android:layout_height="34dp"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="20"
            android:entries="@array/days" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="21"
            android:text="@string/action_EndDate"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="22"
            android:text="@string/action_EndTime"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/txtEndDate"
            android:layout_width="151dp"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="21"
            android:ems="10"
            android:inputType="date" />

      

        <EditText
            android:id="@+id/txtEndHour"
            android:layout_width="151dp"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="22"
            android:ems="10"
            android:inputType="time" />

        <Button
            android:id="@+id/btnAddNotif"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="25"
            android:text="@string/action_new" />

    </GridLayout>

</LinearLayout>